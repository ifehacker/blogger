<h2>Tags go here <%= @tag.name %></h2>

<ul>
<%= @tag.articles.each do | article | %>
<li>
<%= link_to article.title, article_path(article) %>
</li>
<% end %>

</ul>
<p> <%= link_to "all tags", tags_path %> </p>

<p> <%= link_to "Delete tag", tag_path(@tag), method: :delete, data: {confirm: "Really delete the article?"} %> </p>
